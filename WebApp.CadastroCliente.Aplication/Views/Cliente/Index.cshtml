@model IEnumerable<WebApp.CadastroCliente.Dominio.Models.Cliente>

<table id="table" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                Cliente
            </th>
            <th>
                CPF
            </th>
            <th>
                Data de Nascimento
            </th>
            <th>
                Estado
            </th>
            <th>
                Cidade
            </th>
            <th>
                Sexo
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>
                <td>
                    <a asp-controller="Cliente" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Editar</a> |
                    <a href="Cliente/Delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
